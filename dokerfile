FROM python:3.11-alpine

WORKDIR /app

# Instalar dependencias del sistema
RUN apk add --no-cache \
    gcc \
    musl-dev \
    linux-headers \
    && pip install --upgrade pip

# Copiar requirements
COPY requirements.txt .

# Instalar dependencias de Python
RUN pip install --no-cache-dir -r requirements.txt

# Copiar c√≥digo
COPY . .

# Puerto
EXPOSE 8080

# Comando de inicio
CMD ["python", "bot.py"]
